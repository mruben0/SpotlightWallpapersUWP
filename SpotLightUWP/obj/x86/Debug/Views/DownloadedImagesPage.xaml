<Page x:ConnectionId='1'
    x:Class="SpotLightUWP.Views.DownloadedImagesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpotLightUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:converters="using:SpotLightUWP.Converters"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:models="using:SpotLightUWP.Models"
    mc:Ignorable="d"
    DataContext="{Binding DownloadedImagesViewModel, Source={StaticResource Locator}}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="boolToVis"/>
        <converters:InvertedBoolToVisibilityConverter x:Key="invertedBoolToVis"/>
        <Style x:Key="ImageButtonStyle"
                       TargetType="Button">
            <Setter Property = "Template" >
                <Setter.Value >
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ProgressBar x:ConnectionId='3' Grid.Row="0"                                                                                                     IsIndeterminate="True" ShowError="False" ShowPaused="False" Grid.Column="0"/>

        <StackPanel Grid.Row="1" Canvas.ZIndex="7" VerticalAlignment="Bottom" Orientation="Horizontal">
            <Button x:ConnectionId='7'                                     Margin="5">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE76B;" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>

            <Button >
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEDE3;" FlowDirection="LeftToRight"/>
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:ConnectionId='9' Text="Delete Downloaded"                                         >
                            <MenuFlyoutItem.Icon>
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74D;"/>
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>

            <Button x:ConnectionId='8' HorizontalAlignment="Right" 
                                                      Margin="5" >
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE76C;" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>

        <GridView x:ConnectionId='4'
                                                                                                       
            Grid.Row="1"
            x:Name="gridView"
                                                                
            IsItemClickEnabled="True"
                                                                   
            Padding="{StaticResource MediumLeftRightMargin}"
            SelectionMode="Single">

            <i:Interaction.Behaviors>
                <ic:EventTriggerBehavior EventName="ItemClick">
                    <ic:InvokeCommandAction x:ConnectionId='5'                                                               />
                </ic:EventTriggerBehavior>
            </i:Interaction.Behaviors>
            <GridView.ItemTemplate>
                <DataTemplate                             >
                    <Image x:ConnectionId='6'
                        Grid.Row="0"
                        Height="135"
                        Width="240"
                        x:Name="galleryImage"
                        Stretch="UniformToFill"
                        Style="{StaticResource ThumbnailImageStyle}"
                                                          
                                                                              
                                                                           />
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

